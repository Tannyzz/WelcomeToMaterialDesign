<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:freezesText="true"
        android:background="#ffea00"
        android:text="google.com/design"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_tres" />

    <ImageButton
        android:id="@+id/fab_2"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:background="@drawable/info_background"
        android:stateListAnimator="@anim/anim"
        android:src="@drawable/ic_action_done"
        android:layout_marginTop="28dp"
        android:layout_marginRight="14dp"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_material_next"
            android:padding="8dp"
            android:gravity="left"
            android:textSize="16dp"
            android:id="@+id/textView_cuatro"
            android:layout_below="@+id/fab_2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_material"
            android:padding="8dp"
            android:gravity="left"
            android:textSize="16dp"
            android:layout_below="@+id/textView_cuatro"
            android:layout_alignParentStart="true" />


</RelativeLayout>