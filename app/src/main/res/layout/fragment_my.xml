<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity$PlaceholderFragment">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:background="#FFFFFF"
        android:text="Hola Mundo de Material Design"
        android:padding="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:id="@+id/textView_uno" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:background="@color/accent"
        android:id="@+id/button_next"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:id="@+id/textView_dos"
        android:text="@string/about_material"
        android:background="@color/primary_dark"
        android:elevation="4dp"
        android:layout_below="@+id/textView_uno"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:elevation="4dp"
        android:text="@string/about_material"
        android:background="@color/primary_dark"
        android:layout_below="@+id/textView_dos"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/fab_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/info_background"
        android:stateListAnimator="@anim/anim"
        android:src="@drawable/ic_action_done"
        android:elevation="10dp" />


</RelativeLayout>
